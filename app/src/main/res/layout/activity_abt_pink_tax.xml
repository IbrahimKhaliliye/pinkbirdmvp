<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/rectangle_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEADD"
        android:contentDescription="rectangle_15"
        android:src="@drawable/rectangle_15"
        tools:layout_conversion_absoluteHeight="869dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="411dp" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's PinkTax?"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_conversion_absoluteHeight="40dp"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_conversion_absoluteWidth="217dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The pink tax is a gender-based price discrimination that causes women to pay more for identical or nearly identical products marketed to men. Pink tax costs the average woman over $1,300 a year and impacts all aspects of daily life."
            android:textSize="20sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="200dp"
            tools:layout_conversion_absoluteHeight="145dp"
            tools:layout_conversion_absoluteWidth="411dp" />
    <RelativeLayout
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_height="wrap_content"
        tools:layout_conversion_absoluteWidth="0dp"
        android:layout_width="wrap_content" />

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_3"
        android:contentDescription="image_3"
        android:src="@drawable/image_3"
        tools:layout_conversion_absoluteHeight="23dp"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_conversion_absoluteWidth="30dp" />



</androidx.constraintlayout.widget.ConstraintLayout>